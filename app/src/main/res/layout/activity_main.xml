<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wszh.weitrainingmultiplethread.MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/activity_main_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <ProgressBar
        android:id="@+id/activity_main_progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/activity_main_load_image_button"
        android:text="Load Image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/activity_main_toast_button"
        android:text="toast"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

